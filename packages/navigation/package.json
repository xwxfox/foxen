{
	"name": "@foxen/navigation",
	"version": "1.4.0",
	"description": "Next.js navigation helpers for Foxen (headers, cookies, redirects, draft mode)",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target bun && bun run build:types",
		"build:types": "tsc --project tsconfig.build.json",
		"dev": "bun run build --watch",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist .turbo"
	},
	"dependencies": {
		"@foxen/core": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "^1.3.4",
		"typescript": "^5.7.0"
	},
	"keywords": [
		"foxen",
		"navigation",
		"nextjs",
		"headers",
		"cookies",
		"redirect"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/xwxfox/foxen",
		"directory": "packages/navigation"
	}
}
